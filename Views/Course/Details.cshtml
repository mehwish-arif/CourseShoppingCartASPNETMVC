@model Course

    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="card-img" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    <p class="card-text">
                        <small class="text-muted">@Model.Category.Name</small>
                    </p>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">@Model.Fee</b></p>
                    <a
                       asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-courseId="@Model.CourseId"
                    class="btn btn-primary">Add To Cart</a>


                </div>
            </div>
        </div>
    </div>
